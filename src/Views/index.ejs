        */

        // Simples script para mudar o título da página principal com base no link da sidebar (exemplo)
        // Em uma aplicação real, você provavelmente renderizaria páginas diferentes ou usaria AJAX.
        document.querySelectorAll('#sidebarMenu .nav-link').forEach(link => {
            link.addEventListener('click', function(event) {
                // Remova 'active' de todos os links
                document.querySelectorAll('#sidebarMenu .nav-link').forEach(l => l.classList.remove('active'));
                // Adicione 'active' ao link clicado
                this.classList.add('active');
                
                // Atualiza o título da página (exemplo básico)
                // Em uma aplicação SPA ou com renderização no servidor por rota, isso seria diferente
                const pageTitle = document.getElementById('pageTitle');
                if (pageTitle) {
                    pageTitle.textContent = this.textContent.trim();
                }
            });
        });

    </script>
