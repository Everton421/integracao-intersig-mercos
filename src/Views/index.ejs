                                </form>
                                <a href="/clientes/logs" class="btn btn-outline-secondary btn-sm ms-2">Ver Logs</a>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">Total Sincronizado: <span id="totalClientes"><%= locals.statusClientes ? statusClientes.total : 0 %></span></small>
                            </div>
